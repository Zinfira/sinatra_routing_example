<h1>All Sales Vinyl</h1>

<h3>Available Records</h3>

<% if @albums.any? %>
<form class="sort" action="/albums">
  <div class="form-group">
    <label for="sort">Sort Alphabetically</label>
    <input id="sort" name="sort" class="form-control" type="submit" value="Go">
  </div>
</form>
  <ul>
    <% @albums.each do |album| %>
      <li><%= album.artist %> - <%= album.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no records to display.</p>
<% end %>

<button class="btn-sucess"><a href="/albums/new">Add a new album</a></button>
<br>
<button class="btn-warning"><a href="/artists">View all artists!</a></button>

<form action="/albums/search">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>



<% @albums.each do |album| %>
  <li><a href="/albums/<%= album.id %>"><%= album.artist %> - <%= album.name %></a></li>
<% end %>


